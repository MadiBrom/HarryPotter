datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")  // Ensure your .env file contains the DATABASE_URL variable
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String     @id @default(uuid())
  username String
  email    String  @unique
  password String
  testResults TestResult[]
  wandTestResults WandTestResult?  // ✅ Singular, one-to-one relationship
}

model TestResult {
  id          String   @id @default(uuid())
  userId      String
  houseResult String
  answer      String?
  user        User     @relation(fields: [userId], references: [id])
}

model WandTestResult {
  id        Int      @id @default(autoincrement())
  userId    String   @unique   // ✅ Make `userId` unique to enforce a one-to-one relationship
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  result    String
  answers   Json?

  user      User     @relation(fields: [userId], references: [id])
}
